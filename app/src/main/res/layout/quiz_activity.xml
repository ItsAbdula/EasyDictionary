<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        android:layout_marginBottom="28dp"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar" />

    <TextView
        android:id="@+id/X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/O"
        android:layout_alignBottom="@+id/O"
        android:layout_centerHorizontal="true"
        android:text="X"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="200sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mean1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="O"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="200sp"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/word"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="89dp"
        android:layout_toEndOf="@+id/word"
        android:max="5"
        android:visibility="visible" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp" />

    <Button
        android:id="@+id/mean1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mean2"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light" />

    <Button
        android:id="@+id/mean2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mean3"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light" />

    <Button
        android:id="@+id/mean3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mean4"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light" />

    <Button
        android:id="@+id/mean4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light" />
</RelativeLayout>